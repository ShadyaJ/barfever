<div class="card-event-small">
  <img src="<%= event.photo_url_1 %>">

  <div class="card-event-info">
    <div class="card-event-event">
      <p><%= event.category %></p>
    </div>

    <div class="card-event-title">
      <h5><%= event.name %></h5>
    </div>

    <div class="card-event-position-price">
      <div class="price">
        <%if event.price.to_i == 0  %>
          <p>free</p>
        <% else %>
          <p><%= "#{event.price}.-" %></p>
        <% end %>
      </div>
      <div class="card-event-position">
        <div class="position-text-small">
          <i class="fas fa-map-marker-alt" style="color: #78c4d4;"></i>
        </div>
        <div class="position-meter">
          <p><%= event.bar.distance_from %></p>
        </div>
      </div>
    </div>
  </div>
</div>

