<!-- Bar header -->
<%= link_to root_path do %>
  <div class="arrow-back">
    <i class="fas fa-chevron-left"></i>
  </div>
<% end %>
  <div class="bar-header">
    <div class="title">
      <h2>Events</h2>
    </div>
