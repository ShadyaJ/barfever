<div class='container'>
  <div class='row'>
    <div class='col-xs-4'>
      <%= simple_form_for(@review, html: { class: 'review_form' }) do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: (1..5).to_a, label: 'Rate your experience' %>
        <%= f.submit 'Send your review', class: 'd-none' %>
      <% end %>
    </div>
  </div>
</div>
