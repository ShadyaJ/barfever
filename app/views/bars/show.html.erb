

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div id="img-bar-show" class="carousel-inner">
    <div class="carousel-item active">
      <div></div>
      <img src="<%= @bar.photo_url_1 %>">
    </div>
    <div class="carousel-item">
      <img src="<%= @bar.photo_url_2 %>">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="show-container">
  <div class="card-bar-show">
    <div class="card-bar-show-body">
        <h6 class="card-bar-show-category"><%= @bar.category %></h6>
        <h4><%= @bar.name %></h4>
        <h6 class="card-bar-price-grey"><%= @bar.price %></h6>
        <p><%= @bar.description %></p>
        <div class="card-bar-show-reviews">
          <% @bar.average_rating.to_i.times do %>
            <span class="fas fa-star" style="color: #D83F87;"></span>
          <% end %>
          <% @bar.blank_stars.to_i.times do %>
            <span class="fas fa-star" style="color: grey;"></span>
          <% end %>
          <span><%= "#{@bar.average_rating} / 5" %> </span>
        </div>

    </div>
    <div class="card-bar-show-buttons">
      <%= link_to "Guest List", "#", class: "btn btn-pink" %>
      <%= link_to "Book Table", "#", class: "btn btn-outline-pink" %>
      <% if @bar.reviews.where(user: current_user).empty?  %>
        <%= link_to "Add Review", new_bar_review_path(@bar), class: "btn btn-outline-pink" %>
      <% end %>
    </div>
  </div>




  <h5 class="section-title">Events</h5>
  <div class="homepage-group">
    <div class="glide-events-nearby glide">
      <div class="glide__track" data-glide-el="track">
        <ul class="glide__slides" style="list-style: none;">
          <% @events.each do |event|  %>
            <%= link_to event_path(event, redirection: "bar-show") do %>
              <li class="glide__slide">
                <%= render "pages/cards/card-event-small", event: event %>
              </li>
            <% end %>
          <% end %>
        </ul>
      </div>
      <% unless @events.empty? %>
        <div class="glide__arrows" data-glide-el="controls">
          <button class="glide__arrow glide__arrow--left" data-glide-dir="<">
            <i class="fas fa-chevron-left"></i>
          </button>
          <button class="glide__arrow glide__arrow--right" data-glide-dir=">">
            <i class="fas fa-chevron-right"></i>
          </button>
        </div>
      <% end %>
    </div>
  </div>


