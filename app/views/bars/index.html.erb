<!-- Bar header -->
<%= link_to root_path do %>
  <div class="arrow-back">
    <i class="fas fa-chevron-left"></i>
  </div>
<% end %>

  <div class="bar-header">
    <div class="title">
      <h2>Bars</h2>
    </div>
  </div>


<!-- Cards container -->
<div class="index-container">
  <% @bars.each do |bar|  %>
    <%= link_to bar_path(bar, redirection: "bar-index") do %>
      <%= render 'card-bar-larg', bar: bar%>
    <% end %>
  <% end %>
</div>

<div class="btn-filter-map">
  <div class="btn-filter">
    <i class="fas fa-filter"></i>
    <p>FILTERS</p>
  </div>
  <div class="btn-map">
    <i class="fas fa-map-marked-alt"></i>
    <p>MAP</p>
  </div>
</div>
