
<div class='devise-container'>

  <div class="forme-login">
    <div class="cross-back-btn">
      <%= link_to root_path do %>
            <i class="fas fa-times"></i>
      <% end %>
    </div>
    <h2>Log in</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "current-password" },
                    palceholder: "bob@gmail.com" %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" },
                    palceholder: "·········" %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: 'forme-btn' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
