<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email, class: 'form-label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Enter email' %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'form-label' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: 'New Password' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: 'form-label' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'New Password' %>
  </div>

  <div class="form-group">
    <%= f.label :phone_number, class: 'form-label' %><br />
    <%= f.phone_field :phone_number, class: 'form-control', placeholder: 'Phone' %>
  </div>

  <div class="form-row">
    <div class="col">
      <%= f.label :first_name, class: 'form-label' %><br />
      <%= f.text_field :first_name, class: 'form-control', placeholder: 'First Name' %>
    </div>

    <div class="col">
      <%= f.label :last_name, class: 'form-label' %><br />
      <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last Name' %>
    </div>
  </div>
  <br>

  <div class='form-check'>
    <%= f.radio_button :status, 'I want to party!', class: 'form-check-input', id: 'user_status' %>
    <%= f.label :status, 'I want to party!', class: 'form-check-label' %>
  </div>
  <div class='form-check'>
    <%= f.radio_button :status, 'I owned the party!', class: 'form-check-input', id: 'user_status' %>
    <%= f.label :status, 'I own the party!', class: 'form-check-label' %>
  </div>
  <br>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-primary'%>
  </div>
<% end %>
<%= render "devise/shared/links" %>
